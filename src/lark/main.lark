?start: script


script:"ama" " "+ cmd


cmd:reminder
    |schedule
    |delete
    |finish
    |add_group


//コマンド
reminder:REMINDER (" "+ reminder_option)*
schedule:SCHEDULE (" "+ schedule_option)*
delete:DELETE (" "+ event_id)
finish:FINISH (" "+ event_id)
add_group:ADDGROUP

//コマンド毎のオプション
reminder_option:option_number->reminder_date
    |option_all 
schedule_option:option_number

option_number:"-" num
option_all:"all"

//必要情報の定義
ALPHANUM: /[a-zA-Z0-9]+/
event_id:ALPHANUM+ "@google.com"
num:NUMBER


//読み込み
REMINDER:"reminder"
SCHEDULE:"schedule"
DELETE:"delete"
FINISH:"finish"
ADDGROUP:"addGroup"



%import common.NUMBER